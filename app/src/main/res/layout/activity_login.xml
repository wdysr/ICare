<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/back1"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button_back"
        android:fontFamily="@font/cantarell_bold"
        android:text="Back"
        android:textSize="11sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/back1"
        android:fontFamily="@font/cinzeldecorative_bold"
        android:text="Welcome Back!"
        android:textColor="#251D3A"
        android:textSize="25sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/txt_login"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:fontFamily="@font/cantarell_regular"
        android:text="Sign in with your data that you entered during Registration."
        android:textColor="#251D3A"
        android:textSize="13sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/layout_usn"
        android:layout_width="320dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtlogin">

        <EditText
            android:id="@+id/erEmail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:background="@drawable/box_form"
            android:fontFamily="@font/cantarell_regular"
            android:hint="Email"
            android:paddingStart="15dp"
            android:textSize="13sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_pass"
        android:layout_width="320dp"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_usn">

        <EditText
            android:id="@+id/erPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:background="@drawable/box_form"
            android:fontFamily="@font/cantarell_regular"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:textSize="13sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_pass">

        <Button
            android:id="@+id/btnlogin"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:width="240dp"
            android:height="50dp"
            android:background="@drawable/orange_shape"
            android:fontFamily="@font/cantarell_bold"
            android:gravity="center"
            android:text="LOGIN"
            android:textColor="#251D3A"
            android:textSize="13sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/txt_forgot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cantarell_regular"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:text="Forgot your Password?"
            android:textColor="#251D3A"
            android:textSize="11sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</RelativeLayout>